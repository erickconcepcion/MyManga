<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyManga.Views.CapitulosPage">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="ChapterList" ItemsSource="mangaResults" HasUnevenRows="true" ItemTapped="MangaList_ItemTapped">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell  Text="{Binding ShowChapter}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>