<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pb="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
             x:Class="MyManga.Views.MainPage"
             Title="{Binding Title}">

    <StackLayout>
        <!-- Place new controls here -->
        <Entry Placeholder="Busca tu manga">
            <Entry.Behaviors>
                <pb:EventToCommandBehavior EventName="TextChanged"
                                          Command="{Binding FilterMangaCommand}"
                                          EventArgsParameterPath="NewTextValue"/>
            </Entry.Behaviors>
        </Entry>

        <ListView x:Name="MangaList" ItemsSource="{Binding MangaResults}" HasUnevenRows="true" IsRefreshing="{Binding IsListRefreshing}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ImageCell ImageSource="{Binding ThumbnailPathComplete}" Text="{Binding Name}" Detail="{Binding BroadcastStatusDescription}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>